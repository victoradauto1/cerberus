generator client {
  provider = "prisma-client-js"
  output   = "../data"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model tokens {
  id       String @id @map("_id")
  name     String
  symbol   String
  decimals Int
  network  Int
}

model pools {
  id       String   @id @map("_id")
  token0   String
  token1   String
  symbol   String
  symbol0  String
  symbol1  String
  fee      Int
  exchange Int
  network  Int

  price0           String
  price0Change     Float
  price0_15        String
  price0_15Change  Float
  price0_60        String
  price0_60Change  Float

  lastUpdate       DateTime
  lastUpdate_15    DateTime
  lastUpdate_60    DateTime

  price1           String
  price1Change     Float
  price1_15        String
  price1_15Change  Float
  price1_60        String
  price1_60Change  Float
}
